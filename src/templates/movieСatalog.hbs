{{#each this}}
  <li class='movie__item'>
    <img
      class='movie__photo'
      {{#if poster_path}}
      src="https://image.tmdb.org/t/p/w300{{poster_path}}"
      {{else}}
      src='https://westsiderc.org/wp-content/uploads/2019/08/Image-Not-Available.png'
      {{/if}}
      data-src="{{id}}"
      alt="{{title}}"
      data-movie-id="{{id}}"
    />
    <h2 class='movie__name'>
      {{title}}
    </h2>
    <div class='movie__info'>
      <p class='movie__genres'>
        {{genre}} ❘ {{release_date}}
      </p>
      <p class='movie__rating'>
        {{vote_average}}
      </p>
    </div>
  </li>
{{/each}}